<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClockTimer.MainPage" Title="Дата и время">
    <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
        <Label x:Name="date"  FontSize="Large"  HorizontalOptions="Center"/>
        <Label x:Name="clock"  FontSize="60"  HorizontalOptions="Center" PropertyChanged="clock_PropertyChanged"/>



        <Button Clicked="OnTimer" x:Name="Ctimer" FontSize="Medium" Margin="10,0,0,0" />
    </StackLayout>

</ContentPage>
